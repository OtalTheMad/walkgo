<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/walkgo_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtEditarPerfilHeader"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/walkgo_primary"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="Editar perfil"
            android:textColor="@color/walkgo_on_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                card_view:cardCornerRadius="@dimen/home_card_corner_radius"
                card_view:cardElevation="@dimen/home_card_elevation"
                card_view:cardBackgroundColor="@color/walkgo_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imgFotoPerfilEditar"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="12dp"
                        android:contentDescription="Foto de perfil"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/walkgo_logo_day" />

                    <Button
                        android:id="@+id/btnSeleccionarFoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Cambiar foto"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="@color/walkgo_on_primary"
                        android:backgroundTint="@color/walkgo_primary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="@dimen/home_card_corner_radius"
                card_view:cardElevation="@dimen/home_card_elevation"
                card_view:cardBackgroundColor="@color/walkgo_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtEditarInfoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información personal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/walkgo_on_surface"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="País"
                        android:textSize="16sp"
                        android:textColor="@color/walkgo_on_surface"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/editPaisPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="País"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/walkgo_on_surface"
                        android:textColorHint="@color/walkgo_on_surface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biografía"
                        android:textSize="16sp"
                        android:textColor="@color/walkgo_on_surface"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/editBiografiaPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Escribe algo sobre ti"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"
                        android:minLines="3"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:textSize="16sp"
                        android:textColor="@color/walkgo_on_surface"
                        android:textColorHint="@color/walkgo_on_surface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de nacimiento"
                        android:textSize="16sp"
                        android:textColor="@color/walkgo_on_surface"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/editFechaNacPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="AAAA-MM-DD"
                        android:layout_marginBottom="24dp"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/walkgo_on_surface"
                        android:textColorHint="@color/walkgo_on_surface" />

                    <Button
                        android:id="@+id/btnGuardarPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="52dp"
                        android:text="Guardar cambios"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="@color/walkgo_on_primary"
                        android:backgroundTint="@color/walkgo_primary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>