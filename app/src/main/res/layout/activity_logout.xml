<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLogout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/walkgo_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/home_card_corner_radius"
        card_view:cardElevation="@dimen/home_card_elevation"
        card_view:cardBackgroundColor="@color/walkgo_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtLogoutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar sesión"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/walkgo_on_surface"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtLogoutMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Deseas cerrar sesión?"
                android:textSize="16sp"
                android:textColor="@color/walkgo_on_surface"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Cerrar sesión"
                android:textColor="?attr/colorOnPrimary"
                android:textAllCaps="false"
                android:backgroundTint="?attr/colorPrimary" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>