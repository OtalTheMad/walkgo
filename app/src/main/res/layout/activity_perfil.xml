<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".PerfilActivity">

    <!-- AppBar (Puedes reemplazar esto con un Toolbar si tu tema lo requiere) -->
    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:text="Perfil de Usuario"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón de Edición/Guardar (Inicialmente visible para el perfil propio) -->
    <ImageView
        android:id="@+id/btn_edit_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Editar Perfil"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="@id/tv_toolbar_title"
        app:layout_constraintTop_toTopOf="@id/tv_toolbar_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_toolbar_title"/>

    <!-- Botón de Agregar Amigo (Inicialmente visible para perfiles ajenos, usamos un icono de Android genérico) -->
    <ImageView
        android:id="@+id/btn_add_friend"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Agregar Amigo"
        android:tint="@color/white"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_add_user"
        app:layout_constraintEnd_toEndOf="@id/tv_toolbar_title"
        app:layout_constraintTop_toTopOf="@id/tv_toolbar_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_toolbar_title"/>

    <!-- Contenido Principal Desplazable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_toolbar_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SECCIÓN 1: CABECERA Y AVATAR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingBottom="24dp">

                <!-- Imagen de Perfil Circular -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_default_avatar"
                    app:civ_border_width="4dp"
                    app:civ_border_color="@color/white"
                    android:elevation="8dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Nombre de Usuario Grande -->
                <TextView
                    android:id="@+id/tv_username_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="CorredorUltra"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <!-- Nombre Real -->
                <TextView
                    android:id="@+id/tv_name_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Juan Pérez (Honduras)"
                    android:textSize="16sp"
                    android:textColor="#757575"/>

            </LinearLayout>

            <!-- SECCIÓN 2: ESTADÍSTICAS RÁPIDAS (KPIs) -->
            <TextView
                style="@style/SectionHeaderStyle"
                android:text="Rendimiento Rápido" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- KPI: Kilómetros Semanales -->
                <androidx.cardview.widget.CardView
                    style="@style/KpiCardStyle">
                    <LinearLayout
                        style="@style/KpiContentStyle">
                        <TextView style="@style/KpiValueStyle" android:id="@+id/tv_weekly_km" tools:text="14.0 km"/>
                        <TextView style="@style/KpiLabelStyle" android:text="Km Recorridos (Semana)"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- KPI: Kilómetros Totales -->
                <androidx.cardview.widget.CardView
                    style="@style/KpiCardStyle">
                    <LinearLayout
                        style="@style/KpiContentStyle">
                        <TextView style="@style/KpiValueStyle" android:id="@+id/tv_total_km" tools:text="230.5 km"/>
                        <TextView style="@style/KpiLabelStyle" android:text="Km Recorridos (Total)"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- KPI: Amigos -->
                <androidx.cardview.widget.CardView
                    style="@style/KpiCardStyle">
                    <LinearLayout
                        style="@style/KpiContentStyle">
                        <TextView style="@style/KpiValueStyle" android:id="@+id/tv_friends_count" tools:text="42"/>
                        <TextView style="@style/KpiLabelStyle" android:text="Amigos"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- KPI: Edad (Dato de la BD 'fecha_nac') -->
                <androidx.cardview.widget.CardView
                    style="@style/KpiCardStyle">
                    <LinearLayout
                        style="@style/KpiContentStyle">
                        <TextView style="@style/KpiValueStyle" android:id="@+id/tv_age" tools:text="30"/>
                        <TextView style="@style/KpiLabelStyle" android:text="Edad"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

            <!-- SECCIÓN 3: INFORMACIÓN PERSONAL (EDITABLE) -->
            <TextView
                android:id="@+id/tv_personal_info_header"
                style="@style/SectionHeaderStyle"
                android:text="Información Personal"
                android:layout_marginTop="16dp"/>

            <!-- Campo de Nombre Editable -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Nombre Completo"
                app:startIconDrawable="@drawable/ic_person">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:enabled="false"
                    tools:text="Juan Pérez"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo de Nombre de Usuario Editable (Con validación simulada) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_username"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Nombre de Usuario"
                app:startIconDrawable="@drawable/ic_user_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:enabled="false"
                    tools:text="CorredorUltra"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo de Biografía -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_biography"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Biografía (Sobre ti)"
                app:startIconDrawable="@drawable/ic_description">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_biography"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top"
                    android:enabled="false"
                    tools:text="Corredor aficionado, disfruto de las mañanas frescas para sumar kilómetros en la montaña."/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón para Cambiar Contraseña (Solo en perfil propio) -->
            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar Contraseña"
                android:visibility="visible"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:icon="@drawable/ic_lockpass"
                android:layout_marginBottom="24dp"/>

            <!-- SECCIÓN 4: LISTA DE AMIGOS -->
            <TextView
                style="@style/SectionHeaderStyle"
                android:text="Mis Amigos"/>

            <!-- RecyclerView simulado para la lista de amigos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_friends_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/item_friend_profile"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>