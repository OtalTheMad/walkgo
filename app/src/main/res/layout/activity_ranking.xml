<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_50"
    tools:context=".RankingActivity">

    <!-- Barra de Herramientas -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarRanking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/green_600"
        android:title="Clasificación de Corredores"
        android:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Selector de Ranking (Global / Amigos) -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroupRanking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:selectionRequired="true"
        app:singleSelection="true"
        app:checkedButton="@id/btnRankingGlobal"
        app:layout_constraintTop_toBottomOf="@id/toolbarRanking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRankingGlobal"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Global"
            android:textColor="@color/green_700"
            app:strokeColor="@color/green_700" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRankingAmigos"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mis Amigos"
            android:textColor="@color/green_700"
            app:strokeColor="@color/green_700" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Línea divisoria para estética -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/green_300"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toggleGroupRanking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView para la Lista de Ranking -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRanking"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_ranking" />

</androidx.constraintlayout.widget.ConstraintLayout>