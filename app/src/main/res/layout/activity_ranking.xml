<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/txtTituloRanking"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1976D2"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="Ranking"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardResumenUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="4dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtTituloResumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu resumen semanal"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/txtPosicionUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="PosiciÃ³n: -"
                android:textSize="15sp"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/txtKmSemanaUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Km esta semana: 0"
                android:textSize="14sp"
                android:textColor="#424242" />

            <TextView
                android:id="@+id/txtKmTotalUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Km totales: 0"
                android:textSize="14sp"
                android:textColor="#424242" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRanking"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1" />

</LinearLayout>