<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 1. Toolbar (Header / Encabezado) -->
    <!-- Reemplaza el TextView simple por un Toolbar, mejor para la navegación. -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1976D2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Configuración"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <!-- Ícono de engranaje como parte del toolbar si es necesario -->
        <!-- Puedes quitar esto si tu Activity maneja el botón de retroceso -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ⚙️"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:paddingEnd="16dp"
            tools:ignore="RtlSymmetry" />
    </androidx.appcompat.widget.Toolbar>

    <!-- 2. ScrollView para el Contenido Principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_settings"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título: Preferencias -->
            <TextView
                android:id="@+id/tv_preferences_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferencias de la aplicación"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="16dp" />

            <!-- CardView para las opciones (Mejora Estética) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Switch: Activar notificaciones -->
                    <Switch
                        android:id="@+id/switch_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activar notificaciones"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:paddingVertical="8dp"
                        android:thumbTint="#1976D2"
                        android:trackTint="#BDBDBD"/>

                    <!-- Separador -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="8dp"/>

                    <!-- Switch: Modo oscuro -->
                    <Switch
                        android:id="@+id/switch_dark_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Modo oscuro"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:paddingVertical="8dp"
                        android:thumbTint="#1976D2"
                        android:trackTint="#BDBDBD" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Botón Guardar cambios (verde) -->
            <Button
                android:id="@+id/btn_save_changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar cambios"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <!-- Botón Volver al inicio (azul) -->
            <Button
                android:id="@+id/btn_go_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volver al inicio"
                android:backgroundTint="#1976D2"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>