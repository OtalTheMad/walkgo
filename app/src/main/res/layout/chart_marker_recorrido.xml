<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/walkgo_background">

    <TextView
        android:id="@+id/txtMarkerTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recorrido"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/walkgo_on_surface" />

    <TextView
        android:id="@+id/txtMarkerFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textSize="13sp"
        android:textColor="@color/walkgo_on_surface"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/txtMarkerKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00 km"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/walkgo_primary"
        android:layout_marginTop="6dp" />
</LinearLayout>