<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/home_card_corner_radius"
    card_view:cardElevation="@dimen/home_card_elevation"
    card_view:cardBackgroundColor="@color/walkgo_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgPerfilAmigo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/mi_perfil"
            android:contentDescription="Foto de amigo"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background_color"
            android:clipToOutline="true"
            android:outlineProvider="background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="left|center_vertical">

            <TextView
                android:id="@+id/tvNombreAmigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Amigo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/walkgo_on_surface" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAccionAmigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguir"
            android:backgroundTint="@color/green_700"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:textAllCaps="false" />

        <LinearLayout
            android:id="@+id/layoutSolicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginStart="8dp">

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aceptar"
                android:backgroundTint="@color/green_700"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textAllCaps="false"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnRechazar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rechazar"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>