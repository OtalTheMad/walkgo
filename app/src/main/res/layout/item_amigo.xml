<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Foto de perfil -->
        <ImageView
            android:id="@+id/imgPerfilAmigo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/mi_perfil"
            android:contentDescription="Foto de amigo"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background_color"
            android:clipToOutline="true"
            android:outlineProvider="background" />

        <!-- Información del amigo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreAmigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Amigo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvUsuarioAmigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="usuario"
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvEstadoAmigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activo"
                android:textSize="14sp"
                android:textColor="#757575" />
        </LinearLayout>

        <!-- Botón único (Agregar/Eliminar) -->
        <Button
            android:id="@+id/btnAccionAmigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:backgroundTint="@color/green_700"
            android:textColor="@android:color/white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textAllCaps="false" />

        <!-- Botones aceptar/rechazar (solo si es solicitud recibida) -->
        <LinearLayout
            android:id="@+id/layoutSolicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginStart="8dp">

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aceptar"
                android:backgroundTint="@color/green_700"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textAllCaps="false"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnRechazar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rechazar"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>