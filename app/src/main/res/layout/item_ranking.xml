<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardUserContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <!-- ConstraintLayout para la estructura interna de la fila -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp">

        <!-- Posición (Puesto) -->
        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Medalla o Icono (Visible solo para Top 3) -->
        <ImageView
            android:id="@+id/ivMedal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_medal_gold"
            app:tint="@color/green_600"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvPosition"
            app:layout_constraintTop_toTopOf="@id/tvPosition"
            app:layout_constraintBottom_toBottomOf="@id/tvPosition"
            android:contentDescription="Medalla de posición"
            tools:visibility="visible"/>

        <!-- Imagen de Perfil -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_default_profile"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/green_400"
            app:layout_constraintStart_toEndOf="@id/ivMedal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <!-- Nota: Asumo que tienes la librería 'CircleImageView' o usas un ImageView normal. -->

        <!-- Nombre del Usuario -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Corredor Estrella (Tú)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/green_800"
            android:layout_marginStart="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivProfileImage"
            app:layout_constraintEnd_toStartOf="@id/tvMetricValue" />

        <!-- Estadística Principal (Kilómetros) -->
        <TextView
            android:id="@+id/tvMetricLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kilómetros:"
            android:textSize="12sp"
            android:textColor="@color/green_700"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            app:layout_constraintStart_toStartOf="@id/tvUserName" />

        <TextView
            android:id="@+id/tvMetricValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="125.4 km"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/green_800"
            app:layout_constraintEnd_toStartOf="@id/tvChangeIndicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" />

        <!-- Indicador de Cambio Semanal (↑ / ↓ / =) -->
        <TextView
            android:id="@+id/tvChangeIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="↑ 5"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/green_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Botón de Agregar Amigo (Solo visible si no es amigo y no es el usuario actual) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddFriend"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:padding="8dp"
            android:text="+"
            android:visibility="gone"
            app:icon="@drawable/ic_add_friend"
            app:iconTint="@color/green_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>